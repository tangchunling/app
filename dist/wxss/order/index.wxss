/**
 * JUI Less utils v1.2
 * 基本工具：常用的属性集
 *
 * @author: Jerry
 * @email: superzcj_001@163.com
 * @copyright 2015 Jerry
 */
page {
  background: #EFEFF4;
  min-height: 100%;
  display: block;
}
.block {
  padding: 30rpx 0;
  background: #fff;
  margin-bottom: 35rpx;
}
.title {
  text-align: center;
  width: 100vw;
}
.title.v1 text {
  font-size: 30rpx;
  line-height: 42rpx;
}
.title.v2 text {
  font-size: 50rpx;
  line-height: 70rpx;
  color: #FF4F2C;
  font-weight: bold;
}
.title.v2 {
  margin-bottom: 30rpx;
}
.weui-flex__item {
  text-align: center;
  font-size: 30rpx;
}
.weui-flex__item div {
  display: block;
}
.ico {
  width: 22rpx;
  height: 22rpx;
}
.mgt20 {
  margin-top: 20rpx;
}
.gray {
  color: #B2B2B2;
}
.weui-grid__icon {
  width: auto;
}
.weui-grid__icon image {
  width: 64rpx;
  height: 64rpx;
  display: block;
  margin: auto;
}
.weui-grids {
  display: block;
}
.weui-grid,
.weui-grids {
  border: none;
}
.weui-grid {
  padding: 10px;
}
.weui-grid__label {
  margin-top: 30rpx;
}
