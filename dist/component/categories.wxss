/* categories.wxss */
page{
  background: #f5f5f5;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
}

.nav_left{
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #f5f5f5;
  text-align: center;
}
.nav_left .nav_left_items{
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
}
.nav_left .nav_left_items.active{
  background: #fff;
}

.nav_right{
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  box-sizing: border-box;
  background: #fff;
}
.nav_right text{
  display: block;
  margin-top: 5px;
  font-size: 10px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.nav_right .weui-cell{
	padding: 0 15px;
	line-height: 96rpx;
  font-size: 30rpx;
}
.nav_left .nav_left_items.active{
  background: #fff;
}
.nav_right .weui-cell::before{
  border-top: solid 1px #f5f5f5;
}